<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-pink-200 via-yellow-100 to-blue-200 min-h-screen font-sans">
    <!-- Preloader -->
    <div id="preloader" class="fixed inset-0 bg-gradient-to-br from-pink-200 via-yellow-100 to-blue-200 flex flex-col items-center justify-center z-50" style="background-image: url('/images/background.jpg'); background-size: cover; background-repeat: no-repeat; background-attachment: fixed;">
      <div class="relative">
        <div class="w-20 h-20 border-8 border-pink-400 border-t-transparent border-b-yellow-300 border-r-blue-400 rounded-full animate-spin shadow-xl"></div>
        <div class="absolute inset-0 flex items-center justify-center">
          <svg class="w-10 h-10 text-blue-500 animate-pulse drop-shadow-lg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v4m0 8v4m8-8h-4m-8 0H4" />
          </svg>
        </div>
      </div>
      <span class="mt-6 text-lg font-semibold text-blue-700 animate-bounce drop-shadow">Loading Blog Nest...</span>
    </div>

    <%- include('../partials/nav') %>
    <%- include('../partials/toast') %>
    
    <div class="mt-10 bg-gradient-to-br from-pink-200 via-yellow-100 to-blue-200 min-h-screen font-sans w-full h-full" style="background-image: url('/images/background.jpg'); background-size: cover; background-repeat: no-repeat; background-attachment: fixed;">  
        <div class="flex flex-wrap justify-center gap-12 px-6">
            <% students.forEach(student => { %>
            <div class="bg-white/80 bg-gradient-to-br from-pink-50 via-yellow-50 to-blue-50 backdrop-blur-xl rounded-3xl shadow-2xl hover:shadow-pink-200 transition-transform duration-300 w-full max-w-sm flex flex-col border-2 border-pink-500 hover:scale-105 hover:border-pink-300 transform hover:-translate-y-2">
                <!-- Card Header -->
                <div class="flex items-center gap-4 p-6 border-b border-yellow-300">
                    <div class="flex-shrink-0">
                        <div class="w-14 h-14 rounded-full bg-gradient-to-br from-pink-200 via-yellow-100 to-blue-200 flex items-center justify-center shadow-lg border-2 border-pink-200">
                            <svg class="w-8 h-8 text-pink-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                            </svg>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-xl font-extrabold text-pink-600 mb-1 drop-shadow-sm"><%= student.Name ? student.Name : ''  %></h3>
                        <p class="text-gray-500 text-xs font-mono"><%= student.Email ? student.Email : '' %></p>
                    </div>
                </div>
                <!-- Card Body -->
                <div class="p-5 flex-1 flex flex-col">
                    <div class="mb-5 flex flex-col gap-1">
                        <span class="block text-xl font-extrabold text-gray-800 bg-gradient-to-r from-yellow-100 via-pink-100 to-blue-100 px-3 py-1 rounded-lg shadow-inner">
                            <%= student.title %>
                        </span>
                    </div>
                    <div class="flex flex-wrap gap-2 mb-4">
                        <% student.technologiesUsed.forEach(tech => { %>
                            <span class="bg-gradient-to-r from-yellow-200 via-pink-100 to-blue-100 text-yellow-900 px-3 py-1 rounded-full text-xs font-semibold shadow border border-yellow-300"><%= tech %></span>
                        <% }) %>
                    </div>
                    <div class="flex justify-between items-center mt-auto">
                        <span class="text-xs text-gray-400">Submitted: <%= new Date(student.createdAt).toLocaleString('en-US', { dateStyle: 'medium', timeStyle: 'short' }) %></span>
                        <span class="inline-flex items-center gap-1 text-xs font-semibold px-3 py-1 rounded-full shadow border
                            <% if (student.status === 'approved') { %>
                                bg-green-100 text-green-700 border-green-300
                            <% } else if (student.status === 'pending') { %>
                                bg-yellow-100 text-yellow-700 border-yellow-300
                            <% } else if (student.status === 'rejected') { %>
                                bg-red-100 text-red-700 border-red-300
                            <% } else { %>
                                bg-gray-100 text-gray-500 border-gray-300
                            <% } %>
                        ">
                            <% if (student.status === 'approved') { %>
                                <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                                </svg>
                            <% } else if (student.status === 'pending') { %>
                                <svg class="w-4 h-4 text-yellow-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="10" />
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l2 2"/>
                                </svg>
                            <% } else if (student.status === 'rejected') { %>
                                <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                                </svg>
                            <% } else { %>
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="10" />
                                </svg>
                            <% } %>
                            Status: <%= student.status %>
                        </span>
                    </div>
                </div>
                <!-- Card Footer -->
                <div class="p-4 border-t border-yellow-200 bg-gradient-to-r from-pink-50 to-yellow-50 rounded-b-3xl">
                    <div class="<% if(user && user.userType === 'admin') %> ? flex justify-between gap-4">
                    <form action="/projectDetails" method="POST">
                        <input type="hidden" name="studentId" value="<%= student._id %>">
                        <button class="w-full bg-gradient-to-r from-pink-500 to-yellow-400 hover:from-pink-600 hover:to-yellow-500 text-white px-4 py-2 rounded-lg font-semibold shadow transition-all duration-200 flex items-center justify-center gap-2" type="submit">
                            View Details
                        </button>
                    </form>
                    <% if(user && user.userType === 'admin') { %>
                    <form action="/delete-project" method="GET">
                        <input type="hidden" name="projectId" value="<%= student._id %>">
                        <button class="w-full bg-gradient-to-r from-pink-500 to-yellow-400 hover:from-pink-600 hover:to-yellow-500 text-white px-4 py-2 rounded-lg font-semibold shadow transition-all duration-200 flex items-center justify-center gap-2" type="submit">
                            Delete
                        </button>
                    </form>
                    <% } %>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>

    <!-- Preloader Hide Script -->
    <script>
        window.addEventListener('load', function () {
            const preloader = document.getElementById('preloader');
            preloader.style.display = 'none';
        });
    </script>

</body>
</html>
