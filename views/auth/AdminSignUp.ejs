<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-pink-200 via-yellow-100 to-blue-200 min-h-screen font-sans">
  <%- include('../partials/nav') %>
  <%- include('../partials/toast') %>
  <main class="container mx-auto flex flex-col items-center justify-center min-h-[80vh]">
    <div class="bg-pink-100 w-full max-w-2xl rounded-3xl shadow-2xl p-10 mt-12 border-4 border-black backdrop-blur-md z-2xl">
      <h1 class="text-4xl font-extrabold mb-8 text-center text-purple-700 drop-shadow">Add New Admin</h1>
      <!-- Error Message Block -->
      <%- include('../partials/error') %>
      <form action="/signup" method="POST" class="space-y-6">
        <input type="hidden" name="userType" value="admin" />
        <div>
          <input
            type="text"
            name="firstName"
            placeholder="First Name"
            value="<%= oldInput.firstName %>"
            class="w-full px-5 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-300 bg-pink-50/50 transition placeholder:text-pink-400"
            required
          />
        </div>
        <div>
          <input
            type="text"
            name="lastName"
            placeholder="Last Name"
            value="<%= oldInput.lastName %>"
            class="w-full px-5 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-300 bg-pink-50/50 transition placeholder:text-pink-400"
            required
          />
        </div>
        <div>
          <input
            type="email"
            name="email"
            placeholder="Email Address"
            value="<%= oldInput.email %>"
            class="w-full px-5 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-300 bg-blue-50/50 transition placeholder:text-blue-400"
            required
          />
        </div>
        <div>
          <input
            type="password"
            name="password"
            placeholder="Password"
            class="w-full px-5 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-yellow-300 bg-yellow-50/50 transition placeholder:text-yellow-400"
            required
          />
        </div>
        <div>
          <input
            type="password"
            name="confirmPassword"
            placeholder="Confirm Password"
            class="w-full px-5 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-yellow-300 bg-yellow-50/50 transition placeholder:text-yellow-400"
            required
          />
        </div>
        <div>
          <label class="flex items-center space-x-2">
            <input name="terms" type="checkbox" class="accent-red-500 scale-110" <%= oldInput.terms ? "checked" : "" %>>
            <span class="text-lg text-purple-700">I agree to <a href="#" class="text-red-400 underline hover:text-red-600">terms and conditions</a></span>
          </label>
        </div>
        <button type="submit" class="w-full bg-gradient-to-r from-purple-500 to-pink-400 text-white py-3 rounded-lg font-bold text-lg hover:from-purple-600 hover:to-pink-500 transition duration-200">
          Sign Up
        </button>
      </form>
      <div class="mt-8 text-center text-lg text-purple-700">
        Already have an account?
        <a href="/login" class="text-red-500 hover:underline font-semibold">Login here</a>
      </div>
    </div>
  </main>
</body>
</html>
